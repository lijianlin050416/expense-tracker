{
  "name": "expense-tracker",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron": "electron electron/electron.js",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "better-sqlite3": "^11.3.0",
    "next": "14.2.15",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.7",
    "typescript": "^5"
  },
  "build": {
    "productName": "ExpenseTracker",
    "appId": "com.yourdomain.expensetracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron.js"
    ],
    "extraResources": [
      {
        "from": "./database.sqlite",
        "to": "database.sqlite"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}